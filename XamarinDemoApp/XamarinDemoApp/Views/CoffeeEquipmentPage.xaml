<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinDemoApp.Views.CoffeeEquipmentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:XamarinDemoApp.ViewModels;assembly=XamarinDemoApp"
    x:DataType="viewModels:CoffeeEquipmentViewModel"
    BackgroundColor="white">
    <ContentPage.BindingContext>
        <viewModels:CoffeeEquipmentViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid RowDefinitions="*,Auto,Auto, *">
            <Label
                x:Name="LabelCount"
                Grid.Row="1"
                BackgroundColor="Orange"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="{Binding CountDisplay}"
                VerticalOptions="CenterAndExpand" />
            <Button
                Grid.Row="2"
                Command="{Binding IncreaseCount}"
                Text="Click Me" />
        </Grid>
    </ContentPage.Content>
</ContentPage>